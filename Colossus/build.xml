        />
        <signjar jar="libs/batik-dom.jar"
                 alias="${user.name}"
                 keystore="${user.name}Keystore"
                 storepass="${env.JARPASSWORD}"
        />
        <signjar jar="libs/batik-ext.jar"
                 alias="${user.name}"
                 keystore="${user.name}Keystore"
